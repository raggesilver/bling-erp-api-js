  "description": "SDK n√£o oficial para a API do Bling ERP.",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "prepare": "npm run build",
    "build": "npm run build:esm",
    "build:esm": "tsc --project tsconfig.build.json",
    "format": "prettier --write 'src/**/*.ts'",
    "lint": "eslint --fix 'src/**/*.ts'",
    "test": "npm run build && jest --config jest.config.ts",
    "test:coverage": "jest --config jest.config.ts --coverage"
  },
  "exports": {
    ".": {
      "import": "./lib/bling.js",
      "types": "./lib/bling.d.ts"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/raggesilver/bling-erp-api-js.git"
  },
  "keywords": [
    "api",
    "sdk",
    "typescript",
    "erp",
    "bling",
    "bling-erp",
    "bling-api"
  ],
  "author": "Paulo Queiroz",
  "contributors": [
    "Alexandre Bellas",
    "vitor-san"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/raggesilver/bling-erp-api-js/issues"
  },
  "homepage": "https://github.com/raggesilver/bling-erp-api-js#readme",
  "devDependencies": {
    "@types/chance": "^1.1.6",
    "@types/jest": "^29.5.11",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "chance": "^1.1.11",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "uuid": "^9.0.1"
  },
  "publishConfig": {
    "access": "public"
  }
