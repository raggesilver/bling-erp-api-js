{
  "compilerOptions": {
    "target": "es2017",
    "module": "ESNext",
    "moduleResolution": "node",
    "declaration": true,
    "removeComments": true,
    "outDir": "./lib",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "types": ["vitest/globals"]
  },
  "include": [
    "src/**/*",
  ],
  "exclude": ["node_modules"]
}
