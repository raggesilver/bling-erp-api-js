{
  "name": "bling-erp-sdk",
  "version": "5.8.0",
  "description": "SDK n√£o oficial para a API do Bling ERP.",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "prepare": "npm run build",
    "build": "npm run build:esm",
    "build:esm": "tsc --project tsconfig.build.json",
    "format": "prettier --write 'src/**/*.ts'",
    "lint": "eslint --fix 'src/**/*.ts'",
    "test": "vitest --run",
    "test:coverage": "vitest --run --coverage"
  },
  "exports": {
    ".": {
      "import": "./lib/bling.js",
      "types": "./lib/bling.d.ts"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/raggesilver/bling-erp-api-js.git"
  },
  "keywords": [
    "api",
    "sdk",
    "typescript",
    "erp",
    "bling",
    "bling-erp",
    "bling-api"
  ],
  "author": "Paulo Queiroz",
  "contributors": [
    "Alexandre Bellas",
    "vitor-san"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/raggesilver/bling-erp-api-js/issues"
  },
  "homepage": "https://github.com/raggesilver/bling-erp-api-js#readme",
  "devDependencies": {
    "@types/chance": "^1.1.6",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitest/coverage-v8": "^3.1.3",
    "chance": "^1.1.12",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.6.0",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "uuid": "^9.0.1",
    "vitest": "^3.1.3"
  },
  "publishConfig": {
    "access": "public"
  }
}
